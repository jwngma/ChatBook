<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
       />

    <EditText
        android:id="@+id/reg_email"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/email"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:background="@drawable/edt_bg"
        android:layout_height="50dp" />
    <EditText
        android:id="@+id/reg_password"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:background="@drawable/edt_bg"
        android:inputType="numberPassword"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/password"
        android:hint="Password"
        android:paddingLeft="10dp"/>
    <EditText
        android:id="@+id/reg_con_password"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:background="@drawable/edt_bg"
        android:inputType="numberPassword"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/password"
        android:hint=" Confirm Password"
        android:paddingLeft="10dp"/>

    <Button

        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/reg_btn"
        android:text="Register"
        android:textColor="#fff"
        android:background="@drawable/btn_bg"/>
    <TextView
        android:id="@+id/to_login"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Allready have an Account ? click here"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#673AB7"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Or Create Account With"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#000"/>

    <LinearLayout
        android:id="@+id/social_lin"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="3">

        <ImageView
            android:id="@+id/gmail_reg"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/google"/>
        <ImageView
            android:id="@+id/facebook_reg"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/facebook"/>
        <ImageView
            android:id="@+id/twitter_reg"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/twitter"/>
    </LinearLayout>
</LinearLayout>